#include "minishell_execution.h"

/*---- prototypes ------------------------------------------------------------*/

static void	files_management(t_data *data, char *file, t_token_minishell token);
static void	heredoc_management(t_data *data, char *file, t_token_minishell token)

/*----------------------------------------------------------------------------*/

void	token_recognition(t_data *data, t_string_token *string_of_tokens)
{
	t_string_token	*temp;
	t_token_minishell token;

	temp = string_of_tokens;
	while (temp != NULL)
	{
		if (temp->token == PIPE)
			data->nb_of_pipes++;
		else if (temp->token == CHEVRON_IN || temp->token == CHEVRON_OUT || \
			temp->token == APPENDS)
		{
			token = temp->token;
			temp = temp->next;
			files_management(data, temp->content, token);
		}
		else if (temp->token == HERE_DOC)
		{
			temp = temp->next;
			heredoc_management(data, temp->content);
		}
		else if (temp->token == STRING)
		{
			
		}
		temp = temp->next;
	}
}

static void	files_management(t_data *data, char *file, t_token_minishell token)
{
	if (token == CHEVRON_IN)
	{
		if (data->infile != 0)
			close(data->infile);
		data->infile = open(file, O_RDONLY, 0644);
		if (data->infile == -1)
			perror("open infile");
	}
	else 
	{
		if (data->outfile != 0)
			close(data->outfile);
		if (token == CHEVRON_OUT)
			data->outfile = open(file, O_WRONLY | O_CREAT | O_TRUNC, 0644);
		else
			data->outfile = open(file, O_WRONLY | O_CREAT | O_APPEND, 0644);
		if (data->outfile == -1)
			perror("open outfile");
	}
}
static void	heredoc_management(t_data *data, char *end_of_file)
{
	puts("here_doc");
	if (data->infile != 0)
		close(data->infile);
	
	data->infile = open(file, O_RDONLY, 0644);
	if (data->infile == -1)
		perror("open infile");
}